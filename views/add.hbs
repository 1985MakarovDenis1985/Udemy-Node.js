<h1>{{title}}</h1>

{{#if errors}}
    <span class="add-course_error">{{errors}}</span>
{{/if}}

<form action="/add" method="post" novalidate>
    <div class="input-field ">
        <input placeholder="new course" name="title" id="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title"></label>
        <span class="helper-text" data-error="wrong"></span>
    </div>

    <div class="input-field ">
        <input placeholder="cost of course" name="price" id="price" type="text" class="validate" required min="1" value="{{data.price}}">
        <label for="price"></label>
        <span class="helper-text" data-error="write cost" ></span>
    </div>

    <div class="input-field ">
        <input placeholder="img" id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="urlImg"></label>
        <span class="helper-text" data-error="wrong" ></span>
    </div>

    <!-- добавления инпута для csrf защиты -->
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button>Add course</button>
</form>