<h1>Card</h1>

<div id="card">

{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Name of course</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Remove course</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <p><strong>Overall: <span class="price">{{price}}</span></strong></p>
{{else}}
    <p>Card is empty</p>
{{/if}}
</div>