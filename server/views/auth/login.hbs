
<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Login</a></li>
                <li class="tab col s6"><a href="#registration">Registration</a></li>
            </ul>
        </div>

        <div id="login" class="col s6 offset-s3">
            <h1>Go to the Store</h1>
            <form action="/auth/login" method="post">
                <div class="input-field ">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>

                <div class="input-field ">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="write cost" ></span>
                </div>

                <button class="btn-primary btn" type="submit">Log in</button>
            </form>
        </div>

        <div id="registration" class="col s6 offset-s3">
            <h1>Registration form</h1>
            <form action="/auth/registration" method="post">
                <div class="input-field ">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="wrong"></span>
                </div>

                <div class="input-field ">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="write cost" ></span>
                </div>

                <div class="input-field ">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Password</label>
                    <span class="helper-text" data-error="write cost" ></span>
                </div>

                <button class="btn-primary btn" type="submit">Registration</button>
            </form>
        </div>
    </div>
</div>